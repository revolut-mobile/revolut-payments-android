<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Declare Revolut app query: To allow the SDK to check if the Revolut app is installed. -->
    <queries>
        <package android:name="${revolutAppId}" />
    </queries>

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".RevolutPayLiteDemoApplication"
        android:allowBackup="true"
        android:enableOnBackInvokedCallback="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/Theme.RevolutPayDemo">
        <activity
            android:name=".main.MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/Theme.RevolutPayDemo">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="revolut-pay-demo"
                    android:scheme="payments" />
            </intent-filter>
        </activity>
    </application>

</manifest>
